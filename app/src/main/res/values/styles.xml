<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style_cell_body_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/body_text_color</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="text_style_subtitle_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="text_style_body_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/body_text_color</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="text_style_large_title_text">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/font_oswald_medium</item>
    </style>

    <style name="text_style_yellow_medium_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="CustomAppBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_oswald_medium</item>
    </style>

    <style name="small_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="button_style_default_button">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/default_button_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextNoBottomLine" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>