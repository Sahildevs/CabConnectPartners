<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onboarding.fragments.OtpFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_onboarding_screens"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFY &amp; DRIVE!"
                style="@style/text_style_large_title_text" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Enter the code,                       to get yourself onboard."
                style="@style/text_style_yellow_medium_text" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/etOtp1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp2"/>

                <Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>


                <EditText
                    android:id="@+id/etOtp2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp3"/>

                <Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>


                <EditText
                    android:id="@+id/etOtp3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp4"/>

                <Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>


                <EditText
                    android:id="@+id/etOtp4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp5"/>


                <Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>


                <EditText
                    android:id="@+id/etOtp5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp6"/>

                <Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/etOtp6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:backgroundTint="@color/yellow"
                    android:nextFocusForward="@id/etOtp5"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the six digit verification code sent to +9193****187."
                android:textColor="@color/yellow"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/loader2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify"
                    android:text="verify"
                    style="@style/small_button_style" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>